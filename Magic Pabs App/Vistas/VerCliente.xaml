<Window x:Class="Magic_Pabs_App.Vistas.VerCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magic_Pabs_App.Vistas"
        mc:Ignorable="d"
        Title="VerCliente"
        Height="275"
        Width="255"
        Icon="/img/negre.ico">
    <StackPanel Background="#6BD7ED">
        <TextBlock FontSize="20"
                   FontWeight="Bold">Nombre:</TextBlock>
        <TextBlock Text="{Binding Path=Cliente.nombre}"
                   FontSize="20"></TextBlock>
        <TextBlock FontSize="20"
                   FontWeight="Bold">Email:</TextBlock>
        <TextBlock Text="{Binding Path=Cliente.email}"
                   FontSize="20"
                   TextWrapping="Wrap"></TextBlock>
        <TextBlock FontSize="20"
                   FontWeight="Bold">Telefono:</TextBlock>
        <TextBlock Text="{Binding Path=Cliente.telefono}"
                   FontSize="20"></TextBlock>
        <Button Width="50px" Click="Button_Click">Cerrar</Button>
    </StackPanel>
</Window>
